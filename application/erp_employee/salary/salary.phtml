$(document).on('keydown', function(e) {
    var isTextarea = $(e.target).is('textarea');
    
    // Check if Enter key is pressed (keyCode 13)
    if (e.key === 'Enter' || e.keyCode === 13) {
        
        // If inside textarea, allow a new line (do not submit the form)
        if (isTextarea) {
            if (e.ctrlKey || e.altKey) {
                // Allow Ctrl+Enter or Alt+Enter for newline
                return true;
            } else {
                // Default action for Enter in textarea is newline
                e.preventDefault();
                $(e.target).val($(e.target).val() + '\n');
            }
        } else {
            // Prevent default action of Enter key (form submission) globally
            e.preventDefault();
            
            // Focus on the next focusable element if not inside a textarea
            var $focusable = $(':focusable');
            var currentIndex = $focusable.index(document.activeElement); // Get current focused element
            var nextIndex = currentIndex + 1;
            
            // Focus the next focusable element if it exists
            if (nextIndex < $focusable.length) {
                $focusable.eq(nextIndex).focus();
            }
        }
    }
});

// Helper function to get all focusable elements on the page
